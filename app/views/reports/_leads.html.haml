= t('reports.excel_icon_alt') + ':'
=link_to image_tag("excel-icon.png",  alt: t('reports.excel_icon_alt'), width: 25, height: 25),
 reports_path(format: 'xls', firstDate: params[:firstDate], secondDate: params[:secondDate]),
 class: 'excel-icon'

%table.table.table-hover
  %thead
    %tr
      - I18n.t('reports.lead.columns').values.each do |column_value|
        %th= column_value
  %tbody
    - @leads.each do |lead|
      %tr
        %td= lead.created_at
        %td= lead.id
        %td= lead.details_pets.first.pet_name
        %td= lead.details_pets.first.species
        %td= "#{lead.details_pets.first.birth_month} #{ lead.details_pets.first.birth_year}"
        %td= lead.try(:zip_code).try(:state)
        %td= "#{lead.first_name} #{lead.last_name}"
        %td= lead.email
        %td= lead.day_phone
        %td= lead.visitor_ip
        %td= ''
        %td
          - unless lead.latest_response.nil?
            = lead.latest_response.client_name
        %td
          - unless lead.latest_response.nil?
            = lead.latest_response.price
        %td
          - unless lead.latest_response.nil?
            = lead.latest_response.response
        %td
          - unless lead.visitor.nil?
            = lead.visitor.landing_page
        %td
          - unless lead.visitor.nil?
            = lead.visitor.keywords
- if @leads.empty?
  .no-data
    = t('reports.lead.no_available_leads')

.col-md-12
  = will_paginate @leads, renderer: BootstrapPagination::Rails